<div class="container">
  <div class="row">
    <div class="col-xs-6 col-sm-3">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1513736302339-d4d0335c0fb5?ixlib=rb-1.2.1&auto=format&fit=crop&w=750&q=80)">
          <p><%= link_to "PARIS", :controller => "tours", :query => "Paris" %></p>
      </div>
    </div>
    <div class="col-xs-6 col-sm-3">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1508710985089-e985fabbb184?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1300&q=80)">
          <p><%= link_to "LONDON", :controller => "tours", :query => "London" %></p>
      </div>
    </div>
    <div class="col-xs-6 col-sm-3">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1511322896738-1216428a1b1e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80)">
          <p><%= link_to "VENEZIA", :controller => "tours", :query => "Venezia" %></p>
      </div>
    </div>
    <div class="col-xs-6 col-sm-3">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1539037116277-4db20889f2d4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80)">
        <p><%= link_to "BARCELONA", :controller => "tours", :query => "Barcelona" %></p>
      </div>
    </div>
  </div>
  <h1 class="text-center"><strong>Tours around the world</strong></h1>
</div>

<div id = "my-flex">
  <div class="cards">
    <div class="row">
      <% @tours.each do |tour| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= render 'shared/cards', tour: tour %>
        </div>
      <% end %>
    </div>
  </div>
  <div
   id="map"
   style="width: 100%;
   height: 600px;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>

