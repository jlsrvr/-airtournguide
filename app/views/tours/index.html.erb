<div class="container">
  <h1 class="text-center">Tours around the world</h1>

  <%= form_tag tours_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a tour"
  %>
<% end %>

  <div class="row">
    <div class="col-xs-8">
      <div class="row">
          <div class="cards">
          <% @tours.each do |tour| %>
          <!-- <div class= 'col-xs-12 col-sm-6 col-md-4'> -->
            <div class='card-trip '>
              <div class="card-body" style="background-image:url(
              <% if tour.photo.present? %>
              '<%= cl_image_path tour.photo %>'
              <% else %>
              '<%= cl_image_path "https://picsum.photos/200/300/?random" %>'
              <% end %>) "></div>
              <div class='card-trip-infos'>
                <div>
                  <h2><%= tour.name %></h2>
                   <p><%= tour.description[0..20] %>...</p>
                </div>
               <h2 class='card-trip-pricing'><%= tour.price %> â‚¬</h2>
               <%=   cl_image_tag tour.user.photo, class: 'card-trip-user avatar-bordered'%>
              </div>
              <%= link_to '', tour_path(tour), class: 'card-link' %>
            </div>

          <!-- </div> -->

            <% end %>
          </div>
        </div>
      </div>
    <div class="col-xs-4">
      <div
         id="map"
         style="width: 100%;
         height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
       ></div>
    </div>
  </div>
</div>
