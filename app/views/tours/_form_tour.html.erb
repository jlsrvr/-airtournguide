<div class="container form">
  <%= simple_form_for(@tour) do |f| %>
    <%= f.input :name %>
    <%= f.input :city %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :photo, label: "Picture"%>
    <%= f.input :photo_cache, as: :hidden %>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
