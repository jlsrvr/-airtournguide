        <%= f.input :city %>
        <%= f.input :price %>
    </div>
  </div>
  <div class="row text-center">
        <%= f.input :photo, input_html: { class: 'hidden', id: 'photo-input'}, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
